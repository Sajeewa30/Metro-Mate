<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.public_transport">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Metadata -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/ic_home" />

        <!-- Splash Activity -->
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity android:name=".Main" />

        <!-- Login Activity -->
        <activity android:name=".Login" />

        <!-- Map Activity -->
        <activity
            android:name=".Map"
            android:label="@string/title_activity_map" />

        <!-- Register Activity -->
        <activity android:name=".Register" />

        <!-- Passenger Login Activity -->
        <activity android:name=".PassengerLoginActivity" />

        <!-- Passenger Register Activity -->
        <activity android:name=".PassengerRegisterActivity" />

        <!-- Vehicle Activity -->
        <activity android:name=".Vehicle" />

        <!-- Profile Activity -->
        <activity android:name=".Profile" />

        <!-- Settings Activity -->
        <activity android:name=".Settings" />

        <!-- Feedback Activity -->
        <activity android:name=".Feedback" />
        <activity android:name=".RouteTableActivity" />


        <!-- Locate Activity -->
        <activity
            android:name=".Locate"
            android:label="@string/title_activity_locate" />

    </application>
</manifest>
