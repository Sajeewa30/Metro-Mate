<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:background="@color/background_color">

    <!-- Main Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_color"
            android:elevation="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="@android:color/white" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Image Banner -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/card_background"
                    android:layout_margin="16dp"
                    android:clipToPadding="false"
                    android:clipChildren="false">

                    <!-- Container for ImageView and Gradient Overlay -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Image -->
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/wallpaper"
                            android:scaleType="centerCrop" />

                        <!-- Gradient Overlay -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_overlay" />

                        <!-- Title Text on Top of the Image -->
                        <TextView
                            android:id="@+id/cardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome to MetroMate"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_gravity="bottom|center_horizontal"
                            android:padding="12dp" />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>


                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/TextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to MetroMate"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_color"
                    android:paddingTop="8dp"
                    android:layout_marginBottom="16dp" />

                <!-- Locate Buses Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_locate_busses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Locate Buses"
                    android:textAppearance="?attr/textAppearanceButton"
                    android:textColor="@android:color/white"
                    app:icon="@drawable/ic_bus"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="24dp"
                    app:backgroundTint="@color/button_background"
                    android:elevation="8dp"
                    android:translationZ="8dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/button_stroke_color"
                    android:stateListAnimator="@animator/button_state_list_animator"
                />

                <!-- Passenger Login Section -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tv_passenger_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Passenger Login"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    app:icon="@drawable/ic_login"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/login_button_background"
                    android:layout_marginTop="16dp" />

                <!-- Passenger Register Section -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tv_passenger_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Passenger Register"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    app:icon="@drawable/ic_register"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/register_button_background"
                    android:layout_marginTop="8dp" />


                <!-- Driver Section -->
                <TextView
                    android:id="@+id/TextView_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let's drive with MetroMate"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text_color"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tv_driver_interface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver Interface"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    app:icon="@drawable/ic_driver"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/secondary_background"
                    android:layout_marginTop="8dp" />



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header"
        android:background="@color/drawer_background" />

</androidx.drawerlayout.widget.DrawerLayout>
