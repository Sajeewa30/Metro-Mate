<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>


        <!-- Accent and dark colors -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Button text appearance -->
        <item name="textAppearanceButton">@style/CustomButtonTextAppearance</item>

        <!-- Default background -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Elevation and ripple effects -->
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
    </style>

    <!-- Overlay for AppBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Overlay for Popups -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Switch Theme -->
    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:colorControlActivated">#148E13</item>
        <item name="android:colorForeground">@android:color/holo_red_light</item>
    </style>

    <!-- Custom Text Appearance for Buttons -->
    <style name="CustomButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Custom Material Button Style -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
